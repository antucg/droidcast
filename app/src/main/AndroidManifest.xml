<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antonio.droidcast">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.RECORD_AUDIO"/>
  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

  <application
      android:name=".DroidCastApp"
      android:allowBackup="true"
      android:icon="@mipmap/droidcast_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <meta-data
        android:name="nsdKey"
        android:value="$tSeqpL4vvWU?$Ce"/>

    <activity
        android:name=".HomeActivity"
        android:configChanges="orientation|keyboardHidden|screenSize">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".MediaShareActivity"
        android:configChanges="orientation|keyboardHidden|screenSize"/>

    <service android:name="net.majorkernelpanic.streaming.rtsp.RtspServer"/>

    <activity
        android:name=".VideoActivityVLC"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name=".SessionFinishActivity"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name=".StreamingStartedActivity"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:theme="@style/AppTheme.NoActionBar"/>

    <service
        android:name=".MuteService"
        android:exported="false">
    </service>
  </application>

</manifest>