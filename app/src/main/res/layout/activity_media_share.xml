<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_media_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antonio.droidcast.MediaShareActivity">

  <ProgressBar
      android:id="@+id/media_share_progress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="-8dp"
      android:indeterminate="true"
      style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/code_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:text="@string/media_share_give_code"
          android:textAlignment="center"/>

      <TextView
          android:id="@+id/media_share_code_textview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:textAlignment="center"
          android:textSize="24sp"/>

      <TextView
          android:id="@+id/media_share_copy_link_textview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="@dimen/activity_vertical_margin"
          android:text="@string/copy_link_text"
          android:textAlignment="center"/>

      <Button
          android:id="@+id/media_share_copy_link_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="@dimen/activity_half_margin"
          android:text="@string/copy_link_button"
          style="@style/PrimaryButton"/>
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>
